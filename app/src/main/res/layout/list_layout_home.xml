<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="3dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:paddingVertical="10dp">


            <ImageView
                android:id="@+id/imageView_home_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="40dp"
                android:paddingEnd="20dp" />

            <RelativeLayout
                android:id="@+id/relativeLayoutTextViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView_home_category">


                <TextView
                    android:id="@+id/textView_home_title"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="fb - sam" />

                <TextView
                    android:id="@+id/textView_home_subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_home_title"
                    android:text="ram@gmail.com" />

                <TextView
                    android:id="@+id/textView_home_subtitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_home_subtitle1"
                    android:text="cfssae@9232" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView_ViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icons8_edit_96"
                android:paddingRight="45dp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>